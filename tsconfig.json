{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "pages/**/*"
, "styles/styles.ts", "declarations.d.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
